<!DOCTYPE html>
<html
	lang="fr">
	<head>
		<meta
			charset="UTF-8">
		<title>
			{% block title %}
				Bienvenue sur RéservaClasse
			{% endblock %}
		</title>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0">
		<meta
			http-equiv="X-UA-Compatible"
			content="ie=edge">
		<meta
			name="ROBOTS"
			content="NOINDEX, NOFOLLOW">
		<meta
			name="description"
			content="RéservaClasse - Gestion des rendez-vous Parents-Enseignants">
		<meta
			name="application-name"
			content="RéservaClasse"/>
		<meta
			name="author"
			content="AlexCreationWeb">
		<meta
			name="robots"
			content="noindex, nofollow">
		<meta
		name="googlebot"
			content="noindex, nofollow">

		<!-- Favicon -->
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="{{ asset ('favicon/apple-touch-icon.png')}}"/>
		<link
			rel="icon"
			type="image/png"
			href="{{ asset ('favicon/favicon-96x96.png')}}" sizes="96x96"/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="{{ asset ('favicon/favicon.svg')}}" sizes="any"/>
		<link
			rel="manifest"
			href="{{ asset ('favicon/site.webmanifest')}}"/>
		<meta
			name="apple-mobile-web-app-title"
			content="Reserva'Classe"/>
		<link
			rel="shortcut icon"
			href="{{ asset ('favicon/favicon.ico')}}"/>
		<meta
		name="theme-color"
			content="#2c3e50">


		<!-- Social Media -->
		<meta
			property="og:title"
			content="RéservaClasse - Gestion des rendez-vous Parents-Enseignants">
		<meta
			property="og:type"
			content="website">
		<meta
			property="og:image"
			content="{{ asset ('/assets/favicon/android-chrome-512x512.png')}}">
		<meta
			property="og:description"
			content="Réserva'Classe - Gestion des rendez-vous Parents-Enseignants">
		<meta
			property="og:site_name"
			content="Réserva'Classe">
		<meta
			property="og:locale"
			content="fr_FR">

		<!-- Stylesheets block -->
		{# {% block stylesheets %}
						{% endblock %} #}

		{# JavaScript block #}
			{% block javascripts %}
				{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
	{% endblock %}

	</head>

		<body
		class="body-container">
		{# Header block #}
		{% block header %}
			{% set _route = app.request.get('_route') %}
			<header>
				<nav
					class="navbar navbar-expand-lg bg-primary px-2 py-3"
					data-bs-theme="dark">
					<div
						class="container-lg">
						<a
							class="navbar-brand"
							href="{{ path('page_home') }}">
							<img
								src="{{ asset('img/logo-ReservaClasse-2.webp')}}" alt="logo Réserva'Classe">
						</a>
						<button
							class="navbar-toggler"
							type="button"
							data-bs-toggle="collapse"
							data-bs-target="#navbar"
							aria-controls="navbar"
							aria-expanded="false"
							aria-label="Toggle navigation">
							<span
								class="navbar-toggler-icon"></span>
						</button>

						<div
							class="collapse navbar-collapse justify-content-end mt-4 mt-lg-0 py-3 py-lg-0 "

							id="navbar">
							<ul
								class="navbar-nav">
								<li
									class="nav-item">
									<a
										class="nav-link{{ _route == 'page_home' ? ' active' : '' }}"
										href="{{ path('page_home') }}">
										Accueil
									</a>
								</li>
								<li
									class="nav-item">
									<a
										class="nav-link{{ _route == 'page_reservations' ? ' active' : '' }}"
										href="{{ path('page_reservations') }}">
										Les Réservations
									</a>
								</li>
								<li
									class="nav-item">
									<a
										class="nav-link{{ _route == 'page_slots' ? ' active' : '' }}"
										href="{{ path('page_slots') }}">
										Réserver un créneau
									</a>
								</li>
							</ul>
							<ul
								class="navbar-nav ms-lg-3">
								<li
									class="nav-item">
									<a
										class="nav-link disabled"
										href="">
										Connexion
									</a>
								</li>
							</ul>
						</div>
					</div>
				</nav>
			</header>
		{% endblock %}

		{# Main content block #}
		<main
			id="main">
			{% block body %}

				{% include '_block-title.html.twig' %}

				<div
					class="container mt-2 mt-md-5">

					<div
						class="row">
						<div
							class="col-12 col-lg-10 mx-auto">

							{% block content %}
							{% endblock %}

						</div>
					</div>
				</div>

			{% endblock %}
		</main>

		{# Footer block #}
		{% block footer %}
			<footer
				id="footer">
				<div
					class="container-fluid bg-primary py-2 mt-auto"
					data-bs-theme="dark">
					<p
						class="text-center text-white mb-0">
						&copy;
						{{ 'now'|date('Y') }}
						- Réserva'Classe (v1.0) • AlexCreationWeb
					</p>
				</div>

			</footer>
		{% endblock %}

	</body>
</html>
