<!DOCTYPE html>
<html>
	<head>
		<meta
			charset="UTF-8">
		<title>
			{% block title %}
				Bienvenue sur RéservaClasse
			{% endblock %}
		</title>
		<link
			rel="icon"
			href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link
				rel="stylesheet"
				href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/flatly/bootstrap.min.css">
		{% endblock %}
		{# {% block javascripts %}
																																																																																																																																																																		{% endblock %} #}
	</head>

	<body>

		{% block header %}
			{% set _route = app.request.get('_route') %}
			<header>
				<nav
					class="navbar navbar-expand-lg bg-primary"
					data-bs-theme="dark">
					<div
						class="container-fluid">
						<a
							class="navbar-brand"
							href="{{path('page_home')}}">
							RéservaClasse
						</a>
						<button
							class="navbar-toggler"
							type="button"
							data-bs-toggle="collapse"
							data-bs-target="#navbar"
							aria-controls="navbar"
							aria-expanded="false"
							aria-label="Toggle navigation">
							<span
								class="navbar-toggler-icon"></span>
						</button>
						<div
							class="collapse navbar-collapse"
							id="navbar">
							<ul
								class="navbar-nav me-auto">
								<li
									class="nav-item">
									<a
										class="nav-link
																						{{ _route == 'page_home' ? ' active' : '' }}
																						"

										href="
																																																																																																																																																																																																																																																																																																																																																																															{{path('page_home')}}
																																																																																																																																																																																																																																																																																																																																																																															">

										Accueil
										<span
											class="visually-hidden">
											(current)
										</span>
									</a>
								</li>
								<li
									class="nav-item
										
																																																		">

									<a
										class="nav-link
											{{ _route == 'page_reservations' ? ' active' : '' }}
											"

										href="
																																																																																																																																																																																																																																																																																																																																																																					{{path('page_reservations')}}
																																																																																																																																																																																																																																																																																																																																																																					">

										Les Réservations
									</a>
								</li>
								<li
									class="nav-item">
									<a
										class="btn btn-secondary my-2 my-sm-0"
										type="button"
										aria-label="Réserver un créneau"
										href="#">
										Réserver un créneau
									</a>
								</li>

							</ul>
							<ul
								class="navbar-nav ms-auto">
								<li
									class="nav-item
										
																																																		">

									<a
										class="nav-link
											{{ _route == 'page_login' ? ' active' : '' }}
											"

										href="
																																																																																																																																																																																																																#
																																																																																																																																																																																																																	">

										Connexion
									</a>
								</li>
							</ul>
						</div>
					</div>
				</nav>
			</header>
		{% endblock %}

		<main>
			{% block body %}

				{# Container pour le titre de la page #}
				{% include '_block-title.html.twig' %}

				{% block content %}
				{% endblock %}

			{% endblock %}
		</main>

		{% block footer %}
			<footer>
				<div
					class="container-fluid bg-primary py-2"
					data-bs-theme="dark">
					<p
						class="text-center text-white mb-0">
						&copy;
						{{ 'now'|date('Y') }}
						- RéservaClasse
					</p>
				</div>

				<script
					src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
					integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
					crossorigin="anonymous"></script>


			</footer>
		{% endblock %}

	</body>
</html>
