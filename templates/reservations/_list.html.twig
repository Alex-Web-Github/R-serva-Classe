{# templates-parts : /reservations/_list.html.twig #}
<h2
	class="fs-3 mb-4 text-primary">
	Récapitulatif
</h2>

<div
	class="table-responsive-sm">
	<table
		class="table table-striped">
		<thead>
			<tr
				class="table-primary">
				<th
					scope="col">
					Élève
				</th>
				<th
					scope="col">
					Jour
				</th>
				<th
					scope="col">
					Heure de début
				</th>
				<th
					scope="col">
					Heure de fin
				</th>
				<th
					scope="col">
					Statut
				</th>
			</tr>
		</thead>
		<tbody>
			{% if reservations is empty %}
				<tr>
					<th
						colspan="5"
						class="text-center">
						Aucune réservation effectuée pour le moment.
					</th>
				</tr>
			{% else %}
				{% for reservation in reservations %}
					<tr>
						<th
							scope="row">
							{{ reservation.user.firstname }}
							{{ reservation.user.lastname }}
						</th>
						<td>
							{{ reservation.slot.datetime | date('d/m/Y') }}
						</td>
						<td>
							{{ reservation.slot.datetime | date('H:i') }}
						</td>
						<td>
							{{ reservation.slot.getEndTime | date('H:i') }}
						</td>
						<td>
							{{ reservation.status}}
						</td>
					</tr>
				{% endfor %}
			{% endif %}
		</tbody>
	</table>
</div>
